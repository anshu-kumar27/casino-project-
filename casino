#include <bits/stdc++.h>
using namespace std;

class Casino{
    private:
    
    int amount;
    int bitamt;
    
    public:
    int guess;

    int dice;

    void entry(){
 cout<<"\n=======================================================================================================================";
 cout<<"\n   CCCCC      A        SSSSSSSSS   IIIIIIIII  NN     NN    OOOOOOOO     ";
 cout<<"\n CC          A  A      SS             III     NN N   NN   OO      OO    ";
 cout<<"\nCC          A    A     SSSSSSSSS      III     NN  N  NN   OO      OO    ";
 cout<<"\n CC        AAAAAAAA           SS      III     NN   N NN   OO      OO    ";
 cout<<"\n   CCCCC  A        A   SSSSSSSSS   IIIIIIIII  NN     NN    OOOOOOOO     ";
 cout<<"\n=======================================================================================================================\n";
 
    }

    void Calc(){
        cout<<"\n Deposite your amount :";
        cin>>amount;
        do{
            system("cls");

        
        do{
            cout<<"Enter the Bit amount :";
            cin>>bitamt;
            if(bitamt > amount){
                cout<<"the bitting amount should be less than the amount"<<" ";
                cout<<"re-enter the bit amount: ";
            }
        }while(bitamt>amount);
        do{
        cout<<"\n guess a number between 1-10 :";
        cin>>guess;
        if(guess<=0 || guess>10){
            cout<<"\n the number should be in between 1-10";
            cout<<"\n guess a number between 1-10 again :";
        }
        }while(guess<=0 || guess>10);

        dice = rand()%10 +1;

        if(dice == guess){
            cout<<"\n congo you guessed the right number ";
            cout<<"\n you won : "<<bitamt;
            amount = bitamt + amount;
            cout<<"\n your new amount is : "<<amount;
        }
        else{
            cout<<"\n oopsi you're wrong , the winning number was : "<<dice;
            cout<<"\n you lost :"<<bitamt;
            amount = amount - bitamt;
            cout<<"\n your remaning amount is :"<<amount;
        }
            if(amount <= 0){
                cout<<"\n you don't have money to play";
                break;
            }
    }

        void Results(){
        cout<<"\n===============================================================================================\n";
        cout << "Thanks For Playing Game Again Your Current Amount Is " <<amount ;
        cout<<"\n===============================================================================================\n";
    }

};


int main()
{
        string name;
        char choice;
        Casino c1;
        c1.entry();
        cout<<"type your name :";
        getline(cin,name);
        while(choice != 'n'){
                cout<<"do you wanna play again? (y/n) :";
                cin>>choice;
                if(choice == 'y'){
                c1.Calc();
                }
                
                else if(choice == 'n'){
                c1.Results();
                }
                else{
                        cout<<"\n please type either in Y or n ";
                }
        }

        
        return 0;
}
